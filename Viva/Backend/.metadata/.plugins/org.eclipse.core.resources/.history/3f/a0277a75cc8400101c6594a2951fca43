package com.bankofapis.backend.controller;

import com.bankofapis.backend.model.Transaction;
import com.bankofapis.backend.repository.TransactionRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.*;

import java.time.LocalDateTime;
import java.util.List;

@RestController
@RequestMapping("/api/transactions")
public class TransactionController {

    @Autowired
    private TransactionRepository transactionRepository;

    // Create a transaction
    @PostMapping
    public Transaction createTransaction(@RequestBody Transaction transaction) {
        transaction.setDateTransaction(LocalDateTime.now()); // auto set date
        return transactionRepository.save(transaction);
    }

    // Get all transactions
    @GetMapping
    public List<Transaction> getAllTransactions() {
        return transactionRepository.findAll();
    }
}
