package com.bankofapis.transaction.client;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.*;

import com.bankofapis.transaction.dto.AccountDTO;

@FeignClient(name = "account-service")  // matches account-service in Eureka
public interface AccountClient {

	@GetMapping("/api/accounts/{id}")
	AccountDTO getAccount(@PathVariable("id") Integer id);


    @PutMapping("/api/accounts/{id}/updateBalance")
    AccountDTO updateBalance(@PathVariable Integer id, @RequestParam Double newBalance);
}
